<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="me.theoduino.imageencryptor.EncryptImageActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/encrypt_select_file"
            android:id="@+id/button_select_file"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="onSelectFileClicked"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_filename_uri"
            android:id="@+id/textview_uri"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignBottom="@+id/button_select_file"
            android:layout_toLeftOf="@+id/button_select_file" android:layout_toStartOf="@+id/button_select_file"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_text"
            android:id="@+id/text_password"
            android:inputType="textPassword"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="60dp"
            android:layout_alignRight="@+id/button" android:layout_alignEnd="@+id/button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/encrypt_perform_action"
            android:id="@+id/button_encrypt" android:layout_below="@+id/text_password" android:layout_centerHorizontal="true"
            android:onClick="onEncryptClicked"/>
</RelativeLayout>
